{
  "name": "@company/design-system",
  "version": "1.0.0",
  "description": "Cross-platform design system for web, iOS, and Android applications",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:tokens && npm run build:components",
    "build:tokens": "style-dictionary build",
    "build:components": "npm run build:web && npm run build:ios && npm run build:android",
    "build:web": "cd web && npm run build",
    "build:ios": "cd ios && npm run generate",
    "build:android": "cd android && npm run generate",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "design-system",
    "ui",
    "components",
    "cross-platform",
    "react",
    "swiftui",
    "jetpack-compose"
  ],
  "author": "Design System Team",
  "license": "MIT",
  "devDependencies": {
    "@storybook/react": "^7.0.0",
    "@types/react": "^18.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "style-dictionary": "^3.8.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}